												<LinearDoubleKeyFrame KeyTime="{StaticResource MaterialToggleSwitchNormalAnimationDuration}"
																	  Value="0" />
											</DoubleAnimationUsingKeyFrames>

										</Storyboard>
									</VisualTransition>
								</VisualStateGroup.Transitions>
