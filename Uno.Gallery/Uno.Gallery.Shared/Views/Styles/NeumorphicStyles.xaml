										<Setter Target="KnobOffBorder.Margin" Value="0" />
										<Setter Target="KnobOnBorder.CornerRadius" Value="{ThemeResource LargeThumbCornerRadius}" />
										<Setter Target="KnobOffBorder.CornerRadius" Value="{ThemeResource LargeThumbCornerRadius}" />
										<Setter Target="SwitchKnobOn.Margin" Value="26,0,0,0" />
										<Setter Target="SwitchKnobOff.Margin" Value="0,0,22,0" />
