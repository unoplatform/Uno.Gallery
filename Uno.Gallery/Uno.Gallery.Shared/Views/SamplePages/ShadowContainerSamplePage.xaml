	  xmlns:smtx="using:ShowMeTheXAML"
	  xmlns:sample="using:Uno.Gallery"
	  xmlns:converters="using:Uno.Gallery.Converters"
	  xmlns:selectors="using:Uno.Gallery.Selectors"
