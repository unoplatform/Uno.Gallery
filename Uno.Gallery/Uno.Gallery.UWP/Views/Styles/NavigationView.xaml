															VerticalContentAlignment="Stretch"
															HorizontalContentAlignment="Stretch"
															Grid.Row="2" />

											<!-- FooterItems -->
											<muxc:ItemsRepeaterScrollHost Grid.Row="3">
												<ScrollViewer x:Name="FooterItemsScrollViewer"
