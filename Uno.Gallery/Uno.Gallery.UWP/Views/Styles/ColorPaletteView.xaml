								   Foreground="{TemplateBinding OnColorBrush}"
								   VerticalAlignment="Bottom" />

						<Rectangle Height="12"
								   Width="12"
								   Fill="{TemplateBinding OnColorBrush}"
								   HorizontalAlignment="Left"
								   VerticalAlignment="Top"
								   Margin="0,4,0,0"
								   Grid.Row="1" />

						<TextBlock Text="{TemplateBinding OnColorHex}"
