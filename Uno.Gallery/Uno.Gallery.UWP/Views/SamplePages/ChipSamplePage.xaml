					<StackPanel>
						<!-- MaterialFilledInputChipStyle -->
						<TextBlock Text="Input - Filled"
								   Margin="0,20,0,0"
								   Style="{StaticResource MaterialSubtitle1}" 
                                   AutomationProperties.AutomationId="InputFilledLabel"/>
						<ScrollViewer Style="{StaticResource HorizontalScrollViewerStyle}">
							<StackPanel Orientation="Horizontal"
										Spacing="8">
								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledInput_Enabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<utu:Chip Content="Enabled"
											  Style="{StaticResource MaterialFilledInputChipStyle}"
											  AutomationProperties.AutomationId="ChipFilledInput_Enabled">
										<utu:Chip.Icon>
											<Image Source="ms-appx:///Assets/Avatar.png"
                                                  AutomationProperties.AutomationId="ChipFilledInputEnabled_Image" />
										</utu:Chip.Icon>
									</utu:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledInput_Disabled"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<utu:Chip Content="Disabled"
											  Style="{StaticResource MaterialFilledInputChipStyle}"
											  AutomationProperties.AutomationId="ChipFilledInput_Disabled"
											  IsEnabled="False">
										<utu:Chip.Icon>
											<Image Source="ms-appx:///Assets/Avatar.png" />
										</utu:Chip.Icon>
									</utu:Chip>
								</smtx:XamlDisplay>

								<smtx:XamlDisplay UniqueKey="ChipSamplePage_ChipFilledInput_Selected"
												  Style="{StaticResource XamlDisplayBelowStyle}">
									<utu:Chip Content="Selected"
											  IsChecked="True"
											  Style="{StaticResource MaterialFilledInputChipStyle}"
											  AutomationProperties.AutomationId="ChipFilledInput_Selected" />
								</smtx:XamlDisplay>
							</StackPanel>
						</ScrollViewer>

