<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType Condition="'$(Configuration)'=='Release'">WinExe</OutputType>
		<OutputType Condition="'$(Configuration)'=='Debug' or '$(IsCanaryBranch)'=='true'">Exe</OutputType>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<NoWarn>$(NoWarn);NU1701</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Assets\Fonts\Cupertino\SF-Pro-Text-Regular.otf" />
		<Content Include="Assets\StoreLogo.png" />
		<EmbeddedResource Include="..\Uno.Gallery.Windows\Package.appxmanifest" LogicalName="Package.appxmanifest" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Svg.Skia" Version="0.5.18" />
		<PackageReference Include="Uno.CommunityToolkit.WinUI.UI.Controls" Version="7.1.100" />
		<PackageReference Include="Uno.Fonts.Fluent" Version="2.2.2" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
		<PackageReference Include="Uno.ShowMeTheXAML" Version="2.0.0-dev0012" />
		<PackageReference Include="Uno.ShowMeTheXAML.MSBuild" Version="2.0.0-dev0012" />
		<PackageReference Include="Uno.Toolkit.WinUI.Cupertino" Version="3.0.5" />
		<PackageReference Include="Uno.Toolkit.WinUI.Material" Version="3.0.5" />
		<PackageReference Include="Uno.WinUI.Lottie" Version="4.9.45" />
		<PackageReference Include="Uno.WinUI.Skia.Gtk" Version="4.9.45" />
		<PackageReference Include="Uno.WinUI.RemoteControl" Version="4.9.45" Condition="'$(Configuration)'=='Debug'" />
		<PackageReference Include="Uno.UI.Adapter.Microsoft.Extensions.Logging" Version="4.9.45" />
		<PackageReference Include="Uno.WinUI.Svg" Version="4.9.45" />
		<PackageReference Include="Uno.Core.Extensions.Disposables" Version="4.0.1" />
		<PackageReference Include="Uno.Core.Extensions.Compatibility" Version="4.0.1" />
		<PackageReference Include="SkiaSharp.Skottie" Version="2.88.3" />
		<PackageReference Include="SkiaSharp.Views.Uno.WinUI" Version="2.88.3" />
	</ItemGroup>

	<Import Project="..\Uno.Gallery.Shared\Uno.Gallery.Shared.projitems" Label="Shared" />

	<ItemGroup>
		<None Remove="Assets\Fonts\Cupertino\SF-Pro-Text-Regular.otf" />
	</ItemGroup>

	<ItemGroup>
		<IncludeXamlNamespaces Include="not_mobile" Visible="False" />
		<ExcludeXamlNamespaces Include="mobile" Visible="False" />
	</ItemGroup>
</Project>
